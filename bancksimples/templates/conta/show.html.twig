{% extends 'base.html.twig' %}

{% block title %}Conta{% endblock %}

{% block body %}
    <h1>Conta</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contum.id }}</td>
            </tr>
            <tr>
                <th>NumeroConta</th>
                <td>{{ contum.numeroConta }}</td>
            </tr>
            <tr>
                <th>Saldo</th>
                <td>{{ contum.saldo }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ contum.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DataCriacao</th>
                <td>{{ contum.dataCriacao ? contum.dataCriacao|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DataCacelamento</th>
                <td>{{ contum.dataCacelamento ? contum.dataCacelamento|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_conta_index') }}">back to list</a>

    <a href="{{ path('app_conta_edit', {'id': contum.id}) }}">edit</a>

    {{ include('conta/_delete_form.html.twig') }}
{% endblock %}
