    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gerente in gerentes %}
            <tr>
                <td>{{ gerente.id }}</td>
                <td>{{ gerente.nome }}</td>
                <td>
                    <a href="{{ path('app_gerente_show', {'id': gerente.id}) }}">show</a>
